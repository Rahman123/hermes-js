{
  "name": "hermes-js",
  "version": "1.0.0",
  "description": "Universal action dispatcher for JavaScript apps",
  "main": "dist/index.js",
  "module": "dist/index.es6.js",
  "jsnext:main": "dist/index.es6.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run build:umd && npm run build:umd:min && npm run build:es",
    "build:es": "babel src --out-file dist/index.es6.js",
    "build:umd": "rollup -c",
    "build:umd:min": "NODE_ENV=production rollup -c",
    "precommit": "npm test",
    "prepublish": "npm run build",
    "prepush": "npm test",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pensierinmusica/hermes-js.git"
  },
  "keywords": [
    "action",
    "ajax",
    "async",
    "asynchronous",
    "api",
    "dispatch",
    "event",
    "fetch",
    "flux",
    "functional",
    "http",
    "jquery",
    "middleware",
    "post",
    "promise",
    "reducer",
    "react",
    "react-native",
    "redux",
    "request",
    "rest",
    "socket",
    "thunk",
    "transaction",
    "websockets"
  ],
  "author": "Alessandro Zanardi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pensierinmusica/hermes-js/issues"
  },
  "homepage": "https://github.com/pensierinmusica/hermes-js#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^2.13.1",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-uglify": "^2.0.1"
  }
}
